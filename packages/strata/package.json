{
  "name": "@jbcom/strata",
  "version": "0.1.0",
  "description": "The complete solution for foreground, midground, and background layer 3D gaming in Node.js - terrain, water, vegetation, characters, and more",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./shaders": {
      "types": "./dist/shaders/index.d.ts",
      "import": "./dist/shaders/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./presets": {
      "types": "./dist/presets/index.d.ts",
      "import": "./dist/presets/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "docs:dev": "npx serve docs",
    "docs:build": "echo 'Static docs ready in docs/'",
    "test": "vitest run",
    "test:unit": "vitest run --config tests/unit/vitest.config.ts",
    "test:integration": "vitest run --config tests/integration/vitest.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "prepublishOnly": "npm run build && npm run test:unit"
  },
  "keywords": [
    "strata",
    "3d-gaming",
    "game-engine",
    "three.js",
    "threejs",
    "react-three-fiber",
    "r3f",
    "webgl",
    "sdf",
    "signed-distance-field",
    "marching-cubes",
    "gpu-instancing",
    "raymarching",
    "volumetric",
    "terrain",
    "water",
    "fog",
    "vegetation",
    "fur",
    "shells",
    "molecular-rendering",
    "character-animation",
    "first-person",
    "third-person",
    "foreground",
    "midground",
    "background",
    "shaders",
    "glsl",
    "pbr",
    "nodejs"
  ],
  "author": "jbcom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbcom/jbcom-oss-ecosystem",
    "directory": "packages/strata"
  },
  "peerDependencies": {
    "@react-three/drei": ">=9.0.0",
    "@react-three/fiber": ">=8.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "three": ">=0.150.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@react-three/drei": "^9.114.0",
    "@react-three/fiber": "^8.15.0",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/three": "^0.160.0",
    "@vitest/coverage-v8": "^4.0.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.160.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.15"
  }
}
