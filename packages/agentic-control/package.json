{
  "name": "agentic-control",
  "version": "1.1.0",
  "description": "Unified AI agent fleet management, triage, and orchestration toolkit for control centers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "agentic": "./dist/cli.js",
    "agentic-control": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./fleet": {
      "types": "./dist/fleet/index.d.ts",
      "import": "./dist/fleet/index.js"
    },
    "./triage": {
      "types": "./dist/triage/index.d.ts",
      "import": "./dist/triage/index.js"
    },
    "./github": {
      "types": "./dist/github/index.d.ts",
      "import": "./dist/github/index.js"
    },
    "./handoff": {
      "types": "./dist/handoff/index.d.ts",
      "import": "./dist/handoff/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "agentic": "tsx src/cli.ts",
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "dependencies": {
    "@ai-sdk/mcp": "^0.0.11",
    "@inquirer/prompts": "8.0.1",
